<!-- money list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each expense}}
        <a href="/expense/{{this.id}}" class="text-secondary">
          <div class="card mb-3">

            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.amount}}
                <i class="fas fa-pen"></i>
              </span>

              <h6 class="card-title mb-1">{{this.date}}</h6>

              <a href="./expense/{{this._id}}/edit" method="get" style="text-decoration: none;">
                <button type="button" class="btn btn-success btn-sm">修改</button>
              </a>



              <form action="./expense/{{ this._id }}?_method=DELETE" method="post">
                <button class="btn btn-outline-danger btn-sm" type="submit">刪除</button>
              </form>

            </div>
          </div>
        </a>



        {{/each}}
      </div>
    </div>
  </div>
</div>